<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/conssign"
    tools:context=".Activity.SignupActivity">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >
        <TextView
            android:id="@+id/tvhed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:padding="15dp"
            android:textSize="18sp"
            android:textColor="@color/darkk"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/tea"
            android:id="@+id/teimg"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_below="@+id/tvhed"/>

        <EditText
            android:id="@+id/ednme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/teimg"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/edittxt"
            android:hint="Enter Your Name"
            android:padding="10dp" />

        <EditText
            android:id="@+id/edmobl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Your Mobile No."
            android:background="@drawable/edittxt"
            android:padding="10dp"
            android:layout_marginRight="15dp"
            android:layout_below="@+id/ednme"
            android:layout_marginTop="10dp"
            android:maxLength="10"
            android:layout_marginLeft="15dp"/>

        <EditText
            android:id="@+id/edpass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edmobl"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/edittxt"
            android:hint="Create Password"
            android:maxLength="10"
            android:padding="10dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/signinbtn"
            android:layout_width="120dp"
            android:layout_height="35dp"
            android:layout_below="@+id/edpass"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:background="@drawable/button"
            android:text="Sign Up" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/signinbtn"
            android:layout_marginTop="10dp"
            android:layout_alignParentRight="true"
            android:weightSum="2">
        <TextView
            android:id="@+id/lgntxt"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="wrap_content"
            android:text="Alerady have an account?"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textColor="@color/black"
          />
            <TextView
                android:id="@+id/lgntxt1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Login "
                android:layout_weight="0.5"
                android:padding="10dp"
                android:layout_marginRight="5dp"
                android:textColor="@color/darkk"
             />
        </LinearLayout>
    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>