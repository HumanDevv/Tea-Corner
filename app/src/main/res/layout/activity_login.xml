<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.LoginActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
     >
    <TextView
        android:id="@+id/tvhed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chai Khata"
        android:padding="15dp"
        android:textSize="18sp"
        android:textColor="@color/darkk"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"/>
    <EditText
        android:id="@+id/edlogn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Your Mobile Number"
        android:background="@drawable/edittxt"
        android:layout_below="@+id/tvhed"
        android:padding="10dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"/>

        <EditText
        android:id="@+id/edpass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Your Password"
        android:background="@drawable/edittxt"
        android:padding="10dp"
        android:layout_marginRight="15dp"
            android:layout_below="@+id/edlogn"
            android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/loginbtn"
            android:layout_width="120dp"
            android:layout_height="35dp"
            android:background="@drawable/button"
           android:layout_centerHorizontal="true"
            android:layout_below="@+id/edpass"
            android:layout_marginTop="15dp"
            android:text="Login"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/loginbtn"
            android:layout_marginTop="10dp"
            android:layout_alignParentRight="true"
            android:weightSum="2.1">
            <TextView
                android:id="@+id/lgntxt"
                android:layout_width="0dp"
                android:layout_weight="1.6"
                android:layout_height="wrap_content"
                android:text="Didn't have an account?"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/signtxt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Sign Up"
                android:layout_weight="0.6"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:textColor="@color/darkk"
                />
        </LinearLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>